<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="WebService.LoginService" behaviorConfiguration="mexBehaviour">
        <endpoint address="LoginService" binding="wsHttpBinding" contract="WebService.ILoginService"/>
        <endpoint address="LoginService" binding="netTcpBinding" contract="WebService.ILoginService"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:10001"/>
            <add baseAddress="net.tcp://localhost:10002"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetBinding="true" httpsGetBinding="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>